<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="portal_create_task" inherit_id="project.portal_my_project">
        <xpath expr="//t/div/div[@class='panel-body']/div/div[2]/div" position="after">
            <button type="button" data-toggle="modal" data-target=".o_create_task" class="btn btn-sm btn-primary">
                Create task
            </button>
            <div class="modal fade o_create_task" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form role="form" accept-charset="UTF-8" action="/website_form/"
                              data-model_name="project.task" data-force_action="" data-success_page=""
                              enctype="multipart/form-data" method="post">
                            <div class="o_website_form_fields">
                                <div class="o_not_editable hidden o_default_snippet_text">
                                    This placeholder prevents its parent from
                                    disappearing when emptied
                                </div>
                                <div class="form-group form-field o_required form-field-char"
                                     data-model-field="true"
                                     data-optional="false">
                                    <label class="control-label" for="name">
                                        <span>
                                            Titel taak
                                        </span>
                                    </label>
                                    <input class="form-control o_website_form_input" type="text" name="name"
                                           required="required"/>
                                </div>
                                <t t-if="project">
                                    <div class="form-group form-field  form-field-many2one" data-model-field="true"
                                         data-optional="true">
                                        <label class="control-label" for="project_id">
                                            <span>
                                                Project
                                            </span>
                                        </label>
                                        <select class="form-control o_website_form_input" name="project_id"
                                                t-foreach="project" t-as="project">
                                            <option t-att-value="project.id">
                                                <t t-esc="project.name"/>
                                            </option>
                                        </select>
                                    </div>
                                </t>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Verzenden"
                                       class="btn btn-primary btn-lg o_website_form_send o_default_snippet_text"/>
                                <span id="o_website_form_result"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div" position="after">
            <section class="container readable o_website_form_builder">
                <form accept-charset="UTF-8" action="/website_form/custom" class="s_website_form col-md-12 mt32"
                      data-model_name="project.task" data-force_action="" data-success_page=""
                      enctype="multipart/form-data" method="post">
                    <div class="o_website_form_fields">
                        <div class="o_not_editable hidden o_default_snippet_text">
                            This placeholder prevents its parent from
                            disappearing when emptied
                        </div>
                        <div class="form-group form-field o_required form-field-char" data-model-field="true"
                             data-optional="false">
                            <label class="control-label" for="name">
                                <span>
                                    Titel taak
                                </span>
                            </label>
                            <input class="form-control o_website_form_input" type="text" name="name"
                                   required="required"/>
                        </div>
                        <t t-if="project">
                            <div class="form-group form-field  form-field-many2one" data-model-field="true"
                                 data-optional="true">
                                <label class="control-label" for="project_id">
                                    <span>
                                        Project
                                    </span>
                                </label>
                                <select class="form-control o_website_form_input" name="project_id"
                                        t-foreach="project" t-as="project">
                                    <option t-att-value="project.id">
                                        <t t-esc="project.name"/>
                                    </option>
                                </select>
                            </div>
                        </t>
                    </div>
                    <div class="form-group">
                        <button type="button"
                                class="btn btn-primary btn-lg o_website_form_send o_default_snippet_text">
                            Verzenden
                        </button>
                        <span id="o_website_form_result"/>
                    </div>
                </form>
            </section>
        </xpath>
    </template>
</odoo>